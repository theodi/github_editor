<div class='alert alert-info'>
  <%= fa_icon 'question-circle' %>
  <%= t 'help.edit' %>
</div>

<%= form_tag action: 'message' do %>

<%= text_area_tag 'content', @content, style: 'width: 100%; height: 500px; font-family: monospace' %>
<%= hidden_field_tag "filename", @filename %>
<%= hidden_field_tag "owner", @owner %>
<%= hidden_field_tag "repo", @repo %>
<%= hidden_field_tag "branch", @branch %>
<%= hidden_field_tag "lineendings", @lineendings %>
<%= submit_tag t(:submit_changes), class: 'btn btn-primary'%>

<% end %>